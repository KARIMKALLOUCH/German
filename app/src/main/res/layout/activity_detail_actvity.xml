<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a">

    <!-- AppBar Ø¨Ø§Ù„ØµÙˆØ±Ø© ÙˆØ§Ù„Ø¹Ù†ÙˆØ§Ù† -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="true"
            android:fitsSystemWindows="true">

            <!-- ØµÙˆØ±Ø© Ø§Ù„Ø®Ù„ÙÙŠØ© -->
            <ImageView
                android:id="@+id/header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/supermarkt"
                android:fitsSystemWindows="true" />

            <!-- âœ… Ø§Ù„Ø¹Ù†ÙˆØ§Ù† Ø¯Ø§Ø®Ù„ Ø§Ù„ØµÙˆØ±Ø© ÙˆÙÙŠ Ø§Ù„Ø£Ø³ÙÙ„ -->
            <TextView
                android:id="@+id/toolbar1_text"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="bottom"
                android:padding="16dp"
                android:text="karim"
                android:fontFamily="@font/merriweather"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:background="#bf363636"
                 />

            <!-- Ø§Ù„ØªÙˆÙ„Ø¨Ø§Ø± -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Ø§Ù„Ù…Ø­ØªÙˆÙ‰ Ø§Ù„Ù…ØªØ­Ø±Ùƒ -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">

            <!-- SeekBar ÙˆØ§Ù„ØµÙˆØª -->
            <LinearLayout
                android:id="@+id/seek1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <ImageView
                    android:id="@+id/btn_play"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/baseline_play_circle_24" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/seekbar_green"
                    android:progressTint="#363636"
                    android:thumbTint="#363636" />
            </LinearLayout>

            <!-- Ø§Ù„Ù†Øµ -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="4dp"
                android:padding="5dp"
                android:textIsSelectable="true"

                android:scaleType="centerCrop"

                android:text="@string/Mein_Tag"
                android:textColor="@color/white"
                android:fontFamily="@font/merriweather"
                android:textSize="15sp"
                android:justificationMode="none"
                />

            <!-- Ø¥Ø¹Ù„Ø§Ù† -->
            <RelativeLayout
                android:id="@+id/banner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Ø£ÙŠÙ‚ÙˆÙ†Ø© Ø§Ù„Ø­Ø°Ù -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:elevation="12dp">

        <View
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="7dp"

            android:background="@drawable/image_border" />

        <ImageView
            android:id="@+id/right1_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_share_24" />
    </RelativeLayout>

    <!-- Ø£ÙŠÙ‚ÙˆÙ†Ø© Ø§Ù„Ø±Ø¬ÙˆØ¹ -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:elevation="12dp">

        <View
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="7dp"

            android:background="@drawable/image_border" />

        <ImageView
            android:id="@+id/left1_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/baseline_arrow_back_ios_24" />
    </RelativeLayout>

    <!-- ðŸ”½ Seek2 Ø«Ø§Ø¨Øª ÙÙŠ Ø§Ù„Ø£Ø³ÙÙ„ -->
    <RelativeLayout
        android:id="@+id/seek2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:background="#1a1a1a">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:textSize="17sp"
            android:fontFamily="@font/merriweather"
            android:textColor="#b5734c" />

        <SeekBar
            android:id="@+id/speedSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="100"
            android:layout_marginTop="9dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="12dp"
            android:thumb="@drawable/custom_thumb"
            android:progressBackgroundTint="#595858"
            android:progressTint="#b5734c"
            android:thumbTint="#b5734c" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
