<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- الخلفية -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="2dp" /> <!-- تكبير ارتفاع الخلفية ليكون أوضح -->
            <corners android:radius="4dp" />
            <solid android:color="#363636" />
        </shape>
    </item>

    <!-- تقدم الـ SeekBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="3dp" /> <!-- اجعل progress أكبر من الخلفية -->
                <corners android:radius="4dp" />
                <solid android:color="#b5734c" />
            </shape>
        </clip>
    </item>

    <!-- خط إضافي فوق progress لمحاكاة تأثير الإضاءة -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="3dp" />
                <corners android:radius="4dp" />
                <solid android:color="#ffcc80" /> <!-- لون أفتح لتمييز الحركة -->
            </shape>
        </clip>
    </item>

</layer-list>
